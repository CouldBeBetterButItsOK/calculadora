<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:background="#C5E1A5"
    tools:context=".MainActivity">

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="395dp"
        android:layout_height="141dp"
        android:background="#C5E1A5"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculadora"
            android:textColor="#FFFFFF"
            android:textSize="60sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="395dp"
        android:layout_height="96dp"
        android:background="#FFFFFF"
        android:backgroundTint="#C5E1A5"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow4">

        <Button
            android:id="@+id/bt7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#80CBC4"
            android:onClick="calculatorClick"
            android:tag="7"
            android:text="7"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#80CBC4"
            android:onClick="calculatorClick"
            android:tag="8"
            android:text="8"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#80CBC4"
            android:onClick="calculatorClick"
            android:tag="9"
            android:text="9"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btRest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#A5D6A7"
            android:onClick="calculatorClick"
            android:tag="-"
            android:text="-"
            android:textSize="34sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="395dp"
        android:layout_height="96dp"
        android:background="#FFFFFF"
        android:backgroundTint="#C5E1A5"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow7">

        <Button
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#80CBC4"
            android:tag="1"
            android:text="1"
            android:textSize="34sp"
            android:textStyle="bold"
            android:onClick="calculatorClick" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#80CBC4"
            android:onClick="calculatorClick"
            android:tag="2"
            android:text="2"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#80CBC4"
            android:onClick="calculatorClick"
            android:tag="3"
            android:text="3"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btEqual"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#A5D6A7"
            android:onClick="calculatorClick"
            android:tag="equal"
            android:text="="
            android:textSize="34sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="395dp"
        android:layout_height="96dp"
        android:background="#FFFFFF"
        android:backgroundTint="#C5E1A5"
        android:foregroundTint="#E6EE9C"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow3">

        <Button
            android:id="@+id/bt4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#80CBC4"
            android:onClick="calculatorClick"
            android:tag="4"
            android:text="4"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#80CBC4"
            android:onClick="calculatorClick"
            android:tag="5"
            android:text="5"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#80CBC4"
            android:onClick="calculatorClick"
            android:tag="6"
            android:text="6"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btSum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#A5D6A7"
            android:onClick="calculatorClick"
            android:tag="+"
            android:text="+"
            android:textSize="34sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="395dp"
        android:layout_height="96dp"
        android:background="#FFFFFF"
        android:backgroundTint="#C5E1A5"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow5">

        <Button
            android:id="@+id/btAC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#A5D6A7"
            android:onClick="calculatorClick"
            android:tag="ac"
            android:text="AC"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#80CBC4"
            android:onClick="calculatorClick"
            android:tag="0"
            android:text="0"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btDiv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#A5D6A7"
            android:onClick="calculatorClick"
            android:tag="/"
            android:text="/"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btMultiply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#A5D6A7"
            android:onClick="calculatorClick"
            android:tag="x"
            android:text="x"
            android:textSize="34sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="395dp"
        android:layout_height="128dp"
        android:background="#80CBC4"
        android:gravity="center|end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow2">

        <TextView
            android:id="@+id/Operacions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:textSize="48sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="395dp"
        android:layout_height="128dp"
        android:background="#FFFFFF"
        android:backgroundTint="#80CBC4"
        android:gravity="bottom|end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow6">

        <TextView
            android:id="@+id/Resultat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:textSize="60sp" />
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>